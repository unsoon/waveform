{
  "name": "@unsoon/waveform",
  "version": "1.0.0",
  "description": "Waveform component for React",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unsoon/waveform.git"
  },
  "homepage": "https://github.com/unsoon/waveform#readme",
  "bugs": {
    "url": "https://github.com/unsoon/waveform/issues"
  },
  "keywords": [
    "waveform",
    "react",
    "audio",
    "unsoon"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "packageManager": "pnpm@9.1.2",
  "scripts": {
    "build": "tsup",
    "lint": "eslint src/",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "prepare": "husky"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.31",
    "prettier": "^3.4.2",
    "react": "^19",
    "semantic-release": "^24.2.0",
    "tailwindcss": "^3.4.4",
    "tsup": "^6.1.3",
    "typescript": "^5.1.6"
  }
}
